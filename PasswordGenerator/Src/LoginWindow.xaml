<Window x:Class="PasswordGenerator.Src.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordGenerator.Src"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="22,65,10,274" TextWrapping="Wrap" Text="Welcome to Password Generator" VerticalAlignment="Center" FontSize="20" TextDecorations="{x:Null}" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="80,160,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" TextDecorations="Underline"/>
        <TextBlock HorizontalAlignment="Left" Margin="80,216,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" TextDecorations="Underline"/>
        <TextBox Name="usernameField" HorizontalAlignment="Left" Height="21" Margin="160,160,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="135"/>
        <PasswordBox Name="passwordField" HorizontalAlignment="Left" Margin="160,216,0,0" VerticalAlignment="Top" Width="135" Height="24"/>
        <Menu HorizontalAlignment="Left" Margin="0,0,0,339" Width="392">
            <MenuItem Header="_File">
                <MenuItem Header="_Create Account" Click="CreateAccount_Click"/>
                <MenuItem Header="_Exit" Click="Shutdown_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="About_Click"/>
            </MenuItem>
        </Menu>
        <Button Click ="Login_Click" Content="Log in" HorizontalAlignment="Left" Margin="160,300,0,0" VerticalAlignment="Top" Width="80"/>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Margin="160,336,0,10" ScrollViewer.VerticalScrollBarVisibility="Disabled" Padding="0" Width="80" Height="23">           
            <Hyperlink Click="Hyperlink_Click">
            Create Account
            </Hyperlink>
        </TextBlock>

    </Grid>

</Window>
